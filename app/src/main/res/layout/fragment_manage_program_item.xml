<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exercise_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:contentPaddingBottom="@dimen/activity_vertical_margin"
    app:contentPaddingLeft="20dp"
    app:contentPaddingRight="@dimen/activity_horizontal_margin"
    app:contentPaddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".80"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/left_layout">

            <TextView
                android:id="@+id/exercise_name"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center"
                android:text="Pushups"
                android:textColor="#f44336" />


            <TextView
                android:id="@+id/exercise_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AKKS dfgjhksjqd qdjkfhqskdfj kjqhsdfjkqshdf kqjhdfkjqhfdk qjkdhfkjhf"
                android:layout_gravity="left"
                android:elegantTextHeight="false"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pkmmte.view.CircularImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="top|right"
                android:src="@drawable/noprogram"
                app:border="true"
                app:border_color="#f44336"
                app:border_width="1dp"
                app:shadow="true" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>