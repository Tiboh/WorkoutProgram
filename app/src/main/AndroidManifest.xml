<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.erikbuto.workoutprogram" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.erikbuto.workoutprogram.Utils.UILApplication"
        android:theme="@style/AppThemeNoActionBar" >
        <activity
            android:name=".Drawer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Manage.ManageExerciseActivity"
            android:label="@string/title_activity_manage_exercise" />
        <activity android:name=".Manage.ImageFullScreenActivity" />
        <activity
            android:name=".Manage.EditOverviewActivity"
            android:label="@string/title_activity_edit_overview"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
    </application>

</manifest>
